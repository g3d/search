!!!
%html
  %head
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    %title= content_for?(:title) ? yield(:title) : 'Drooms - Search'
    %meta{name: 'description', content: "#{content_for?(:description) ? yield(:description) : 'Test task for drooms'}"}
    = stylesheet_link_tag 'application', media: 'all'
    -# Modernizr is required for Zurb Foundation
    = javascript_include_tag 'vendor/modernizr'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    %header
      = render 'layouts/navigation'
    %main.vertical.grid-frame{role: 'main'}
      .grid-block
        .grid-container.grid-container-search
          = yield
